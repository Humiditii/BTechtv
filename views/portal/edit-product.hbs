<!-- contact -->
<div class="w3ls-section contact">
    <div class="container">
        <div class="w3ls-title">
            <h2 class="h3-w3l">Edit materials</h2>
        </div>

        <div class="col-md-7 w3l_contact_form">
            <h4>fill in the below details</h4>
            <form action="/edit-product" method="post">
               {{#if foundProd}}
                    <input type="text" name="name" value="{{foundProd.name}}"  required="">
                    <input type="number" name="price" step="0.01" placeholder="price"  value="{{foundProd.price}}" required="">
                    <textarea name="description"  required="">{{foundProd.description}}</textarea>
                    <input type="hidden" value="{{foundProd._id}}" name="productId">
                    <br>
               {{/if}}
                <input type="submit" value="Submit">
            </form>
        </div>

        <div class="clearfix"> </div>
    </div>
</div>
</div>

